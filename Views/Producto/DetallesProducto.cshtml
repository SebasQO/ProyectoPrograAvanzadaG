@model ProyectoPrograAvanzadaG.Models.Producto

@{
    Layout = null;
}

@{
    ViewBag.Title = "Detalles del Producto";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles del Producto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Volver a la Página Principal</a>
        <h2 class="my-4">Detalles del Producto</h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(model => model.NombreProducto)</h4>
                <dl class="row">
                    <dt class="col-sm-3">Código</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CodigoProducto)</dd>
                    <dt class="col-sm-3">Precio</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>
                    <dt class="col-sm-3">Disponibilidad</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Disponibilidad)</dd>
                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
                </dl>
            </div>
        </div>
        <div class="mt-3">
            @Html.ActionLink("Editar Producto", "EditarProducto", new { id = Model.CodigoProducto }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Volver a la lista", "ListaProductos", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</body>
</html>
