@model ProyectoPrograAvanzadaG.Models.Producto

@{
    Layout = null;
}

@{
    ViewBag.Title = "Eliminar Producto";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Producto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Volver a la Página Principal</a>
        <h2 class="my-4">Eliminar Producto</h2>
        <div class="alert alert-warning">
            <h4>¿Estás seguro de que deseas eliminar este producto?</h4>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreProducto)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreProducto)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Precio)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Disponibilidad)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Disponibilidad)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Estado)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>
        </div>

        @using (Html.BeginForm("EliminarProducto", "Producto", FormMethod.Post, new { id = Model.CodigoProducto }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                @Html.ActionLink("Cancelar", "ListaProductos", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        }
    </div>
</body>
</html>

