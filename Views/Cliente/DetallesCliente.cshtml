@model ProyectoPrograAvanzadaG.Models.Cliente

@{
    Layout = null;
}

@{
    ViewBag.Title = "Detalles del Cliente";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles del Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>   
    <div class="container">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Volver a la Página Principal</a>
        <h2 class="my-4">Detalles del Cliente</h2>
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Nombre:</dt>
                    <dd class="col-sm-9">@Model.Nombre</dd>

                    <dt class="col-sm-3">Dirección:</dt>
                    <dd class="col-sm-9">@Model.Direccion</dd>

                    <dt class="col-sm-3">Teléfono:</dt>
                    <dd class="col-sm-9">@Model.Telefono</dd>

                    <dt class="col-sm-3">Correo Electrónico:</dt>
                    <dd class="col-sm-9">@Model.Correo</dd>
                </dl>
            </div>
            <div class="card-footer">
                @Html.ActionLink("Editar", "EditarCliente", new { id = Model.ClienteId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Eliminar", "EliminarCliente", new { id = Model.ClienteId }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Volver a la lista", "ListaClientes", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</body>
</html>
