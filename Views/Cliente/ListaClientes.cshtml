@model IEnumerable<ProyectoPrograAvanzadaG.Models.Cliente>

@{
    Layout = null;
}

@{
    ViewBag.Title = "Listado de Clientes";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado de Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body> 
    <div class="container">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Volver a la PÃ¡gina Principal</a>
        <h2 class="my-4">Listado de Clientes</h2>
        <p>
            @Html.ActionLink("Crear Nuevo Cliente", "CrearCliente", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>@Html.DisplayNameFor(model => model.Correo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                        <td>
                            @Html.ActionLink("Editar", "EditarCliente", new { id = item.ClienteId }, new { @class = "btn btn-warning btn-sm" }) |
                            @Html.ActionLink("Detalles", "DetallesCliente", new { id = item.ClienteId }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Eliminar", "EliminarCliente", new { id = item.ClienteId }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
